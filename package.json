{
	"name": "turtleworld",
	"scripts": {
		"build": "esbuild --bundle src/main.ts --outfile=www/main.js --minify",
		"dev": "esbuild --bundle src/main.ts --outfile=www/main.js --servedir=www",
		"bundle": "npm run build && mkdir -p dist && zip -r dist/game.zip www -x \"**/.DS_Store\"",
		"check": "tsc"
	},
	"dependencies": {
		"kaplay": "^3001.0.19"
	},
	"devDependencies": {
		"esbuild": "^0.27.3"
	}
}
